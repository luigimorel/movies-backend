{
  "name": "ifma_test",
  "version": "1.0.0",
  "description": "An API built with NodeJS, Express, MongoDB and TypeScript",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "clean": "rm -rf ./dist",
    "test": "jest --forceExit --detectOpenHandles  --watchAll --maxWorkers=1",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "start": "ts-node --transpile-only src/server.ts",
    "production": "ts-node --transpile-only dist/server.js"
  },
  "keywords": [
    "express",
    "mongodb"
  ],
  "author": "Luigi Morel <hi@luigimorel.co> (https://luigimorel.co)",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb-memory-server": "^8.12.2",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  }
}
